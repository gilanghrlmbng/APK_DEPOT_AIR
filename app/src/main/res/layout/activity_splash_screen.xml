<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:paddingTop="50dp"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/splash"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/aclonica"
        android:text="Gil's Water"
        android:textSize="32sp"
        android:textStyle="bold"
        android:id="@+id/tv"/>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/splash"
        app:lottie_rawRes="@raw/water_bottle"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"/>

    <ImageView
        android:id="@+id/logo_univ"
        android:layout_width="175dp"
        android:layout_height="186dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="14dp"
        android:src="@drawable/logo_universitas" />

    <ImageView
        android:id="@+id/logo_citiasiainc"
        android:layout_width="135dp"
        android:layout_height="123dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="46dp"
        android:src="@drawable/logo_citiasiainc" />

</RelativeLayout>